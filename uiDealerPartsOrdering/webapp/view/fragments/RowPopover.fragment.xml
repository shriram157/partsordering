<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{orderModel>messages}"
        initiallyExpanded="true">
        <MessageItem
            type="{orderModel>type}"
            title="{orderModel>message}"
            subtitle="{orderModel>code}"
        />
    </MessagePopover>
</core:FragmentDefinition>

