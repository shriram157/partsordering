<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <MessagePopover
        items="{message>/}"
        initiallyExpanded="true">
        <MessageItem
            type="{message>type}"
            title="{message>message}"
            subtitle="{message>code}"
            description="{message>description} - {message>additionalText} - {message>longtextUrl} - {message>target} "
        />
    </MessagePopover>
</core:FragmentDefinition>
