<mvc:View controllerName="tci.wave2.ui.parts.ordering.controller.CheckOrderStatus" 
	xmlns:html="http://www.w3.org/1999/xhtml"	
	xmlns:core="sap.ui.core"  
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:form="sap.ui.layout.form" 
	xmlns:layout="sap.ui.layout"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:f="sap.f" 
	xmlns="sap.m"
	xmlns:vm="sap.ui.comp.variants"
	displayBlock="true" >
	<Page showNavButton="false" floatingFooter="false" enableScrolling = 'false'>
		<customHeader>
			<core:Fragment fragmentName="tci.wave2.ui.parts.ordering.view.fragments.TopHeader" type="XML"/>
		</customHeader>	
		<core:Fragment fragmentName="tci.wave2.ui.parts.ordering.view.fragments.ToolHeader" type="XML"/>
		
		<content>
			<Toolbar>
				<content>
					<Button id="filterButton"  icon="sap-icon://add-filter" press="onExpandFilter" />							
					<ToolbarSpacer />
					<SearchField placeholder='{i18n>Placeholder.OrderNumber}' 
						showRefreshButton = 'true'
						search = 'onSearch'
						width='60%' />	
				</content>
			</Toolbar>
	
			<fb:FilterBar	reset="onReset" 
							search="onSearch" 
							showRestoreButton="true" 
							showClearButton="true" 
							useToolbar='false' 
							showGoOnFB='fasle' 
							visible="{viewModel>/filterPanelEnable}" 
							showFilterConfiguration='false'>
				<fb:filterItems>
					<fb:FilterItem name="A" label="{i18n>Label.Order.Type}" labelTooltip="{i18n>Label.Order.Type}" mandatory="true">
						<fb:control>
							<MultiComboBox 
								placeholder="{i18n>Label.Order.Type}"
								selectionFinish="onSelectionFinishOT"
								width="15%"
								items="{
									path: 'filterModel>/orderTypeList'
								}">
								<core:Item key="{filterModel>code}" text="{filterModel>name}" />
							</MultiComboBox>
						</fb:control>				
					</fb:FilterItem>
				
					<fb:FilterItem name="B" label="{i18n>Label.Order.Status}" labelTooltip="{i18n>Label.Order.Status}" mandatory="true">
						<fb:control>
							<MultiComboBox id="orderStatus"
								placeholder="{i18n>Label.Order.Status}"
								selectionFinish="onSelectionFinishOS"
								width="15%"
								items="{
									path: 'filterModel>/orderStatusList'
								}">
									<core:Item key="{filterModel>code}" text="{filterModel>name}" />
							</MultiComboBox>
						</fb:control>				
					</fb:FilterItem>				
				</fb:filterItems>
	    	</fb:FilterBar>		
	    	
			<Table id="idProductsTableHeader" showNoData="false">
				<columns>
					<Column width="12em">
						<Text text="{i18n>Lable.Order.Number}" />
					</Column>
					<Column	minScreenWidth="Tablet"	demandPopin="true">
						<Text text="{i18n>Label.Order.Type}" />
					</Column>
					<Column	minScreenWidth="Tablet"	demandPopin="true" hAlign="End">
						<Text text="{i18n>Label.Order.Creation.Date}" />
					</Column>
				</columns>
			</Table>	
			<ScrollContainer id='flexContainer'
				height="{viewModel>/contHigh}"
				width="100%"
				horizontal="true"
				vertical="true"
				focusable="true">
				<Table	id="idProductsTable" 
						items="{
								path: 'viewModel>/orders',
								sorter: {
									path: 'createdOn'
								}
							}"
						sticky = "{['sap.m.Sticky.ColumnHeaders', 'sap.m.Sticky.HeaderToolbar','sap.m.Sticky.InfoToolbar']}"
					>
					<columns>
						<Column width="12em"/>
						<Column	minScreenWidth="Tablet"	demandPopin="true"/>
						<Column	minScreenWidth="Tablet"	demandPopin="true" hAlign="End"/>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<ObjectIdentifier	title="{viewModel>orderNumber}"	text="{viewModel>id}"/>
								<Text text="{path : 'viewModel>scOrderType', formatter:'.formatter.orderType' }" />
								<Text text="{path:'viewModel>createdOn', formatter:'.formatter.shortDate'}" />
							</cells>
						</ColumnListItem>
					</items>
				</Table>
				<Toolbar>
					<content>
						<Text text="" />
					</content>
				</Toolbar>

			</ScrollContainer>

		</content>
		<footer>
			<OverflowToolbar>
				<Button 
					icon="sap-icon://message-popup" 
                    text="{=${message>/}.length}"
                    visible="{=${message>/}.length > 0}"
					type="Emphasized" 
					press="handleMessagePopoverPress"/>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</footer>
	</Page>			
</mvc:View>