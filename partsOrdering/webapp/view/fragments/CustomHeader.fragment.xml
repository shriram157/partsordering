<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns="sap.m">
	<Bar class="sapUiSmallPaddingBeginEnd clCustomHeaderBg">
		<contentLeft>
			<Image id="idLexusLogo" src="images/Lexus_EN.png" width="100px"/>
			<Text text="|" class="sapUiTinyMarginBeginEnd"/>
			<Text class="clCustomFont" text="{i18n>appTitle}"/>
		</contentLeft>
		<contentRight>
			<IconTabHeader id="iconTabHeader" selectedKey="{/tabKey}" select="onSelectTab" backgroundDesign="Transparent" class="" mode="Inline">
				<layoutData>
					<OverflowToolbarLayoutData priority="NeverOverflow" shrinkable="true"/>
				</layoutData>
				<items>
					<IconTabFilter text="{i18n>headerMenu.CreateOrder}" key="CO"/>
					<IconTabFilter text="{i18n>headerMenu.FindOrder}" key="FO"/>
					<IconTabFilter text="{i18n>headerMenu.CheckOrderStatus}" key="CS"/>
				</items>
			</IconTabHeader>
		</contentRight>						
	</Bar>
</core:FragmentDefinition>

