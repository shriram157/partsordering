<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form">
	<Dialog title="Campaign CPOR" contentWidth="80%" contentHeight="70%" verticalScrolling='true' resizable="true" draggable="true"
		horizontalScrolling='true'>
		<content>
		<VBox>
			<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" title="">
				<f:content>
					
					
							<!--<HBox>-->
						<Label text="VIN"/>
						<Input id="vinNum" value="" width="50%" height="60%"/>
						<core:Title text=" "/>
						<Label text="Campaign Code" />
						<HBox>
						<Input id="campaignCode" value=" " width="70%" height="60%"/>
						<Button text="Add" press='addData'/>
							</HBox>
						
				
				</f:content>
			</f:SimpleForm>
			<Table id="idProductsTable" inset="false" items="{'campaignModel>/data' }">
				<headerToolbar/>
					<columns>
						<Column width="12em">
							<Text text="CheckBok "/>
						</Column>
						<Column minScreenWidth="Tablet" demandPopin="true">
							<Text text="VIN"/>
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="Campaign Code"/>
						</Column>
						<Column minScreenWidth="Desktop" demandPopin="true">
							<Text text="Weight"/>
						</Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells>
								<CheckBox text="" select="onSelect"/>
								<Input value="{campaignModel>vinNum}" enabled='false' valueState="None" tooltip="{campaignModel>vinNum}" width="211px"/>
								<Input value="{campaignModel>CampaignCode}" enabled='false' valueState="None" tooltip="{campaignModel>CampaignCode}" width="211px"/>
								<Input value="{campaignModel>CampaignCode}" enabled='false' valueState="None" tooltip="{campaignModel>CampaignCode}" width="211px"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</VBox>
		
			</content>
			<Buttons>
				<Button text="Accept" type="Accept"/>
			</Buttons>
			<endButton>
					
					<!--<Label text="Bar is not very performant."/>-->
					<Button text="Reject" type="Reject" press='CDialogClose'/>
				</endButton>
		</Dialog>
	</core:FragmentDefinition>