<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:form="sap.ui.layout.form"
	xmlns:layout="sap.ui.layout" displayBlock="true" xmlns:ui="sap.ui.table">
	<Dialog title=" {i18n>CampaignCPOR}" contentWidth="940px" contentHeight="70%" verticalScrolling='true' resizable="true" draggable="true"
		horizontalScrolling='true'>
		<content>
			<ScrollContainer id='flexContainer1' height="80%" width="100%" horizontal="true" vertical="true" focusable="true">
				<ui:Table id="idProductsTable1" alternateRowColors="false" showNoData="false" rows="{campaignModel>/data}" visibleRowCount="16"
					selectionMode="None" ariaLabelledBy="title" class="sapUiSizeCompact sapUiNoMarginTop sapUiNoMarginEnd" rowHeight="25px"
					sort="handleSortColumn">
					<ui:extension>
						<Toolbar class="customToolBar">
							<content>
								<!--<Title id="title" text="Order" />-->
								<!--<Button type='Reject' 	icon="sap-icon://sorting-ranking" tooltip="{i18n>Button.Error.Rows}" class="size2" press='handleSortError' visible="false" id="btnFilterError" />	-->
								<Button type='Reject' icon="sap-icon://delete" tooltip="{i18n>ToolTip.CreateOrder.Delete.LineItem}" class="size2" press='handleDeletePart1'
									visible="true"/>
								<ToolbarSpacer/>
								<Button type="Default" icon="sap-icon://sort" tooltip="{i18n>ToolTip.Sort.Error.Rows}" class="size2" press='handleSortError' visible="false"
									id="btnSortError"/>
								<Button type="Transparent" icon="sap-icon://filter" tooltip="{i18n>ToolTip.Filter.Error.Rows}" class="size2" press='handleFilterError'
									visible="false" id="btnFilterError"/>
								<Button type="Transparent" icon="sap-icon://clear-filter" tooltip="{i18n>ToolTip.ClearFilter.Error.Rows}" class="size2"
									press='handleClearFilterError' visible="false" id="btnClearFilterError"/>
							</content>
						</Toolbar>
					</ui:extension>
					<ui:columns>
						<ui:Column width="2rem">
							<Label text=""/>
							<ui:template>
								<!--<CheckBox select='toggleSelect' wrapping="false" selected="{orderModel>selected}" visible="{= ${orderModel>line} > 0}"-->
								<!--	class="sapUiNoContentPadding"/>-->
								<CheckBox selected="{campaignModel>selected}" visible="{campaignModel>checkVisible}"/>
							</ui:template>
						</ui:Column>
						<ui:Column width="{sizeModel>/remLine}" sortProperty="line">
							<!--<Label text="{i18n>Lable.CreateOrder.Line} #"/>-->
							<Label text="#"/>
							<ui:template>
								<!--<Text text="{orderModel>line}" wrapping="false" visible="{= ${orderModel>line} === 0 ? false : true }"/>-->
								<Text text="{campaignModel>line}" wrapping="false" visible="{= ${campaignModel>line} > 0}"/>
							</ui:template>
						</ui:Column>
						<ui:Column width="{sizeModel>/remPartNo}" id="Material" sortProperty="Material">
							<Label text="{i18n>VIN}"/>
							<ui:template>
								<VBox>
									<Input value="{campaignModel>vinNum}" type="Text" textFormatMode="Key" required="true" tooltip="{orderModel>partNumber}" enabled="true" editable="{campaignModel>vinEnable}"/>
									
								</VBox>
							</ui:template>
						</ui:Column>
						<ui:Column width="{sizeModel>/remPartDesc}">
							<Label text="{i18n>CampaignCode}"/>
							<!--<Label text="{i18n>Lable.CreateOrder.PartDesc}/{i18n>Lable.CreateOrder.Comment}"/>-->
							<ui:template >
								<!--<VBox>-->
								<Input value="{campaignModel>CampaignCode}" enabled="true" valueState="None" tooltip="{i18n>CampaignCode}" width="211px" required="true" editable="{campaignModel>camEnable}"/>
								<!--<TextArea value="{orderModel>comment}" rows="1" placeholder="{i18n>Placeholder.comment}" width="100%"></TextArea>-->
								<!--	</VBox>-->
							</ui:template>
						</ui:Column>
						<ui:Column width="{sizeModel>/remPartDesc}">
							<Label text="{i18n>OpCode}"/>
							<ui:template >
								<!--	<Text text="{ path: 'orderModel>spq', formatter:'.formatter.spqFormat'}"/>-->
								<Input value="{campaignModel>OperationCode}" enabled='true' valueState="None" tooltip="{i18n>OpCode}" width="211px" required="true" editable="{campaignModel>camEnable}"/>
								<!--<Text text="{orderModel>spq}"/>-->
							</ui:template>
						</ui:Column>
						<ui:Column id="ErrorStatus" width="4.5rem">
							<ui:template>
								<VBox width="3.5rem">
									<Button  type="Accept" tooltip="Add" class="size1" icon="sap-icon://add" press="handleAddPart2" visible="{campaignModel>addButtonVisible}"/>
									<!--<Button type="Accept" tooltip="Add" class="size1" icon="sap-icon://add" press='handleAddPart1'-->
									<!--	visible="{= ${orderModel>line} === 0 &amp;&amp; ${orderModel>addIcon} === true}"></Button>-->
									<!--	<Button type='Reject' tooltip="Minus" class="size2" icon="sap-icon://less" press='handleDeletePart' visible="{orderModel>minusIcon}"></Button>-->
									<!--<core:Icon src="sap-icon://error" class="size1" color="#ff0000" visible='{= ${orderModel>line} === 0 ? false : ${orderModel>hasError}}'-->
									<!--	activeColor="Negative" alt="Error" press="onError"/>-->
									<!--<ObjectMarker type="{orderModel>ItemStatus}" visible='{= ${orderModel>line} !== 0 &amp;&amp; ${orderModel>hasError} === false}'/>-->
									<!--	<ObjectMarker type="Unsaved" visibility="IconOnly" visible='{= ${orderModel>line} !== 0 &amp;&amp; ${orderModel>hasError} === false}'/>-->
								</VBox>
							</ui:template>
						</ui:Column>
					</ui:columns>
				</ui:Table>
			</ScrollContainer>
			<!--</HBox>-->
		</content>
		<buttons>
			<Button text="{i18n>Back}" press='onPressBack'/>
			<Button text="{i18n>Button.CreateOrder.Cancel}" press='CDialogClose'/>
			<Button text="{i18n>CPOR}" press='CDialogClose'/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>