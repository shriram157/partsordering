<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.f.semantic"
	xmlns:u="sap.ui.unified" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog contentWidth="600px" contentHeight="80%" afterClose="cleanUpItemImportDialog" afterOpen="afterItemImportDialogOpen"
		title="Import Category" verticalScrolling="true">
		<buttons>
			<Button text="{i18n>Button.Cancel}" press="onItemImportDialogCancel"/>
			<Button text="Start Upload" press="onItemImportDialogStartUpload" id="startUpload" enabled="fasle"/>
			<Button text="{i18n>Button.Ok}" press="onItemImportDialogOk"/>
		</buttons>
		<content>
			<Table id="loadTable" inset="false" items="{ path: 'viewModel>/currentProgram/categories/currentImportitems' }">
				<headerToolbar>
					<Toolbar>
						<content>
							<ToolbarSpacer/>
							<u:FileUploader id="fileUploader" name="myFileUpload" uploadUrl="upload/" tooltip="Upload your file to the local server" width="100%"
								style="Emphasized"/>
							<Button text="Upload File" press="handleUploadPress" type="Accept" icon="sap-icon://upload"/>
						</content>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column width="12em">
						<Text text="Category"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="Description"/>
					</Column>
					<Column width="6em" hAlign="End">
						<Text text="Status"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<Text text="{viewModel>Category}"/>
							<Text text="{viewModel>en_desc}"/>
							<Text text="{viewModel>status}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Dialog>
</core:FragmentDefinition>